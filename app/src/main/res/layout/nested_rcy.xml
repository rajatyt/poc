<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="304dp"
    android:layout_marginStart="16.5dp"
    android:layout_marginEnd="8.25dp"
    android:background="@drawable/curved"
    android:layout_height="75dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="245dp"
        android:layout_height="32dp"
        android:text="Demon Slayer - The Hinokami Chronicles Switch (PAL)"
        android:textColor="#0f0f0f"
        android:textSize="14dp"
        android:layout_marginTop="10.5dp"
        android:layout_marginStart="16.5dp"
        android:fontFamily="@font/gibson_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="21dp"
        android:layout_height="14dp"
        android:layout_marginStart="16.5dp"
        android:fontFamily="@font/gibson_regular"
        android:gravity="bottom"
        android:text="AED"
        android:textColor="#58595b"
        android:textSize="11dp"
        android:includeFontPadding="false"
        android:layout_marginTop="52.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="46dp"
        android:layout_height="14dp"
        android:layout_marginTop="52.5dp"
        android:fontFamily="@font/gibson_medium"
        android:text="372.00"
        android:textColor="#231f20"
        android:textSize="14dp"
        android:layout_marginStart="26dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>